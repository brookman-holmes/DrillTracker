    <ImageView
        android:id="@+id/two_ball"
        app:layout_constraintEnd_toStartOf="@+id/three_ball"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/one_ball"
        app:layout_constraintTop_toTopOf="@id/one_ball"
        app:srcCompat="@drawable/ball_two"
        style="@style/BallInPatternImageView" />

    <ImageView
        android:id="@+id/three_ball"
        app:layout_constraintEnd_toStartOf="@+id/four_ball"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/two_ball"
