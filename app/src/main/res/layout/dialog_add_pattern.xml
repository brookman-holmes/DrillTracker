    <ImageView
        android:id="@+id/pattern_ball_six"
        app:layout_constraintEnd_toStartOf="@+id/pattern_ball_seven"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/pattern_ball_five"
        app:layout_constraintTop_toTopOf="@+id/pattern_ball_one"
        tools:srcCompat="@drawable/ball_six"
        style="@style/BallInPatternListImageView" />

    <ImageView
        android:id="@+id/pattern_ball_seven"
        app:layout_constraintEnd_toStartOf="@+id/pattern_ball_eight"
        app:layout_constraintHorizontal_bias="0.5"
