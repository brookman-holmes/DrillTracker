        style="@style/BallInPatternImageView" />

    <ImageView
        android:id="@+id/four_ball"
        app:layout_constraintEnd_toStartOf="@+id/five_ball"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/three_ball"
