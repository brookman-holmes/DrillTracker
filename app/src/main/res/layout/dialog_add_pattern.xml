        style="@style/BallInPatternListImageView" />

    <ImageView
        android:id="@+id/pattern_ball_ten"
        app:layout_constraintEnd_toStartOf="@+id/pattern_ball_eleven"
        app:layout_constraintHorizontal_bias="0.5"
