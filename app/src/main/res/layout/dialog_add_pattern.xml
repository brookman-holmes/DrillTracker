        style="@style/BallInPatternListImageView" />

    <ImageView
        android:id="@+id/pattern_ball_two"
        app:layout_constraintEnd_toStartOf="@+id/pattern_ball_three"
        app:layout_constraintHorizontal_bias="0.5"
