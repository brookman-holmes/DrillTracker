        app:layout_constraintStart_toEndOf="@+id/fourteen_ball"
        app:layout_constraintTop_toTopOf="@id/eleven_ball"
        app:srcCompat="@drawable/ball_fifteen"
        style="@style/BallInPatternImageView" />

    <ImageView
        android:id="@+id/pattern_ball_one"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/pattern_ball_two"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
