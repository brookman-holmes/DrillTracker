<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AlertDialogTheme.Fullscreen" parent="AppTheme">
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowTitleStyle">@style/AdpTitleStyle</item>
    </style>

    <style name="AdpTitleStyle">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="AppTheme.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="AppTheme.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="player_stats" parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_gravity">center</item>
        <item name="layout_columnWeight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="card_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="match_info_grid">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="columnCount">3</item>
        <item name="columnOrderPreserved">true</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="useDefaultMargins">true</item>
    </style>

    <style name="horizontal_picker_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="itemMargin">8dp</item>
        <item name="textSize">14sp</item>
        <item name="itemHeight">36dp</item>
        <item name="itemWidth">84dp</item>
        <item name="textColorSelector">@color/add_attempt_text_color_selector</item>
        <item name="backgroundSelector">@drawable/add_attempt_background_selector</item>
    </style>

    <style name="speed_picker">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cnp2_min">0</item>
        <item name="cnp2_starting_value">0</item>
        <item name="cnp2_max">100</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:alpha">.12</item>
        <item name="android:src">@android:color/black</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="spinner_pattern_ball_image_view">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:src">@drawable/ball_one</item>
    </style>

    <style name="BallInPatternImageView">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="BallInPatternListImageView">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="textInputLayoutDefault" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
    </style>
</resources>
